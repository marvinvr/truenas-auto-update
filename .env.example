# TrueNAS Configuration (Required)
BASE_URL=https://truenas.local
API_KEY=your-api-key-here

# Cron Schedule (Optional)
# Leave empty or comment out for run-once mode
# Example: Run daily at 4 AM
# CRON_SCHEDULE=0 4 * * *

# Notification Settings (Optional)
APPRISE_URLS=
NOTIFY_ON_SUCCESS=false

# App Filtering (Optional)
ONLY_UPDATE_STARTED_APPS=false
EXCLUDE_APPS=
INCLUDE_APPS=

# Docker Image Cleanup (Optional)
# Set to true to automatically clean up unused Docker images after updates
AUTO_CLEANUP_IMAGES=true
